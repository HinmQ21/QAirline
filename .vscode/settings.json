{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "tailwindCSS.experimental.classRegex": [
    // mấy dòng cũ
    ["css\\s*=([^;]*);", "'([^']*)'"],
    ["css\\s*=([^;]*);", "\"([^\"]*)\""],
    ["css\\s*=([^;]*);", "\\`([^\\`]*)\\`"],
    // thêm cho class css
    ["css\\s*\\{([\\s\\S]*?)\\}", "'([^']*)'"],
    ["css\\s*\\{([\\s\\S]*?)\\}", "\"([^\"]*)\""],
    ["css\\s*\\{([\\s\\S]*?)\\}", "\\`([^\\`]*)\\`"]
  ]
}